<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |massage| %>
    <li><%= massage %></li>
    <% end %>
  </ul>
<% end %>


<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm col-md-8 col-lg-5 px-5 px-sm 0">
        <h2>User info</h2>

        <%= form_with model: @user, url: user_path, method: :patch do |f| %>

          <div class="field">
            <h4>Name</h4>
            <%= f.text_field :name %>
          </div>

          <div class="field">
            <h4>Image</h4>
            <%= f.file_field :profile_image, accept: "image/*" %>
          </div>

          <div class="field">
            <h4>Introduction</h4>
            <%= f.text_area :introduction %>
          </div>

          <div class="actions">
            <%= f.submit 'Update User' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<footer>
  <div class="container mt-5">
    <div class="row">
      <div class="mx-auto">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>