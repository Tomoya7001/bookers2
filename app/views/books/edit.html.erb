<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm 0 mx-auto">
        <h2>Editing Book</h2>
        <% if @book.errors.any? %>
          <%= @book.errors.count %>errors prohibited this obj from being saved:
          <ul>
            <% @book.errors.full_messages.each do |massage| %>
            <li><%= massage %></li>
            <% end %>
          </ul>
        <% end %>
        <%= form_with model: @book do |f| %>

          <div class="field">
            <h4>Title</h4>
            <%= f.text_field :title %>
          </div>

          <div class="field">
            <h4>Opinion</h4>
            <%= f.text_area :body %>
          </div>

          <div>
            <%= f.submit "Update Book", class: "btn btn-success" %>
          </div>

          <%= link_to "Show", book_path(@book.id) %>
           |
          <%= link_to "Back", "/books" %>
        <% end %>
      </div>
    </div>
  </div>
</main>

<footer>
  <div class="container mt-5">
    <div class="row">
      <div class="mx-auto">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>