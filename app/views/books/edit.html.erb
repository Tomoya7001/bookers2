<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm col-md-8 col-lg-5 px-5 px-sm 0">
        <h2>Editing book</h2>
        <%= form_with model: @book do |f| %>

          <div class="field">
            <h4>Title</h4>
            <%= f.text_field :title %>
          </div>

          <div class="field">
            <h4>Opinion</h4>
            <%= f.text_area :body %>
          </div>

          <div class="actions">
            <%= f.submit 'Update Book' %>
          </div>

          <%= link_to "Show", user_path(current_user) %>
          " | "
          <%= link_to "Back", "/books" %>
        <% end %>
      </div>
    </div>
  </div>
</main>

<footer>
  <div class="container mt-5">
    <div class="row">
      <div class="mx-auto">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>