<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2>Follower Users</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
          <tr>
            <th>
              <%= link_to user_path do %>
                <%= image_tag @user.get_profile_image(40,40) %>
              <% end %>
            </th>
            <th><%= @user.name %></th>
            <th><p class ="text-small"><%= link_to @user.followers.count, followers_user_path(@user) %> フォロー </p></th>
            <th><p class ="text-small"><%= link_to @user.followeds.count, followeds_user_path(@user) %> フォロワー </p></th>
            <th><%= link_to "Show", user_path(user.id) %></th>
          </tr>
      </tbody>
    </table>

    </div>
  </div>
</div>

<footer>
  <div class="container mt-5">
    <div class="row">
      <div class="mx-auto">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>